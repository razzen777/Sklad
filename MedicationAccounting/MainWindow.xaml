<Window x:Class="MedicationAccounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicationAccounting"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="950" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="221*"/>
            <RowDefinition Height="213*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="379*"/>
            <ColumnDefinition Width="391*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Image1.png" Stretch="Fill"/>
        <TextBlock Grid.Column="1" Text="Складской учет медикаментов" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Arial Black" FontWeight="Normal" FontSize="36" FontStyle="Normal" Grid.ColumnSpan="2" Margin="71,0,0,0"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2"/>
        <Frame Name ="MainFrame" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
